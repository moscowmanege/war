		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
		link(rel='stylesheet', type='text/css', href='/build/css/main.css' + version)
		link(rel='stylesheet', type='text/css', href='/build/css/mobile.css' + version)
		link(rel='stylesheet', type='text/css', href='/libs/css/swiper.min.css' + version)
		link(rel='stylesheet', type='text/css', href='/libs/css/leaflet.css' + version)

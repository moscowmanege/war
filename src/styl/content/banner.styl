&.banner
	width 100%
	height 100%
	position fixed
	overflow hidden
	z-index 0
	background-color black
	background-position center
	background-size cover
	background-repeat no-repeat
	video
		position absolute
		min-width 100%
		min-height 100%
		width auto
		height auto
		top 50%
		left 50%
		transform translate(-50%, -50%)
		&.hidden
			display none
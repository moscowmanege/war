@media (max-width: 600px) {
	.menu-block {
		width 100%!important
	}

	.menu-items {
		left auto!important
		right 0!important
	}

	.menu-drop {
		left auto!important
		right 60px!important
	}

	.footer-inner, .content-inner {
		padding-left 10px!important
		padding-right 10px!important
	}

	.content-partners {
		right auto!important
		left 0
	}

	.content-item.main .logo {
		width 90%!important
	}

	.content-item.heads {
		height auto!important
	}

	.content-item.heads .content-inner {
		padding 0!important
	}

	.head-item {
		min-width 340px!important
		max-width 380px!important
		padding-right 40px!important
		padding-left 40px!important
	}

	.content-title, .head-name {
		font-size 18pt!important
		line-height 18pt!important
		max-width 280px!important
	}

	.content-title span, .head-name span {
		margin-right -3px!important
		margin-bottom 3px!important
		padding-left 5px
		padding-right 5px
		padding-top 4pt!important
		padding-bottom 0pt!important
	}

	.head-status {
		max-width 280px!important
		margin-bottom 20px!important
	}

	.head-quote {
		font-size 10pt!important
		line-height 12pt!important
		padding-bottom 40px!important
	}

	.head-quote:before, .head-quote:after {
		font-size 32pt!important
		line-height 32pt!important
	}

	.head-quote:before {
		margin-left -20px!important
	}

	.schedule-item {
		left 0!important
		border none!important
		margin 0!important
		padding 0!important
		width 100%!important
	}

	.content-item.about p, .content-footer p {
		display inline
	}

	.content-preview-image, .content-preview-column {
		display none!important
	}

	#map-canvas .info-window {
		max-width 230px!important
		max-height 200px!important
	}
}
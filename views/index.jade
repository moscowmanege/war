		script(type='text/javascript', src='/libs/js/jquery-2.2.4.min.js' + version)
		script(type='text/javascript', src='/libs/js/swiper.jquery.min.js' + version)
		script(type='text/javascript', src='/libs/js/leaflet.js' + version)
		script(type='text/javascript', src='/libs/js/easy-button.js' + version)
		script(type='text/javascript', src='/build/js/main.js' + version)
		script(type='text/javascript', src='/build/js/plan.js' + version)
		script(type='text/javascript', src='/build/js/g_maps.js' + version)
	body
		.menu-block
			.menu-items.main
				.menu-drop
					.menu-item.main= __('Главная')
					.menu-item.heads= __('Цитаты')
					.menu-item.about= __('О выставке')
					.menu-item.plan= __('Экспозиция')
					.menu-item.schedule= __('Расписание событий')
					.menu-item.contacts= __('Как добраться')
					.menu-item.partners= __('Участники проекта')
			if locale == 'ru'
				a.menu-items.locale(href='/lang/en') en
			else
				a.menu-items.locale(href='/lang/ru') ru

		.content-block

			//- Banner

			.content-item.banner

			//- Main

			.content-item.main
				img.logo(src='img/logos/main.svg')
				.content-partners
					a.mkrf(href='http://mkrf.ru', target='_blank'): span(style='background-image: url(img/logos/mkrf.png)')
					a.cult_mos(href='http://kultura.mos.ru', target='_blank'): span(style='background-image: url(img/logos/cult_mos.svg)')
					a.manege(href='http://moscowmanege.ru', target='_blank'): span(style='background-image: url(img/logos/manege.svg)')

			//- Heads

			.content-item.heads: .content-inner
				.swiper-container.swiper-container-h
					.swiper-pagination.swiper-pagination-h
					.swiper-wrapper
						if locale == 'ru'
							include heads/ru.jade
						//- else
							include heads/en.jade

			//- About

			.content-item.about: .content-inner
				.content-title!= getDash(__('О выставке'))
				.content-columns
					if locale == 'ru'
						include about/ru.jade
					//- else
						include about/en.jade


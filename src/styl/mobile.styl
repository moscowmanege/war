@media (max-width: 600px) {
	.menu-items.locale {
		top 0!important
		left 60px!important
	}

	.menu-drop {
		left 120px!important
	}

	.footer-inner, .content-inner {
		padding-left 10px!important
		padding-right 10px!important
	}

	.schedule-item {
		left 0!important
		border none!important
		margin 0!important
		padding 0!important
		width 100%!important
	}

	.content-item.about p, .content-footer p {
		display inline
	}

	.content-preview-image, .content-preview-column {
		display none!important
	}

	#map-canvas .info-window {
		max-width 230px!important
		max-height 200px!important
	}
}